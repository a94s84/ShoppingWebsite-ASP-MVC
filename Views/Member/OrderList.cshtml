@model IEnumerable<shoppingWebsite.Models.table_Order>

@{
    ViewBag.Title = "Your OrderList.";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<div class="p-md-4 text-center fs-2 col-9 m-auto" style="letter-spacing:0.3rem">
    @ViewBag.Title
</div>
<div class="text-end mb-5">
    <a href="@Url.Action("LogOut", "Member")" class="btn btn-dark">登出</a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderGuid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receiver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() <= 0)
    {
        <tr><td colspan="5"><h2 class="p-5 text-center">尚無資料</h2></td></tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.OrderGuid)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Receiver)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td class="align-middle">
                    <a href="@Url.Action("OrderDetail")?OrderGuid=@item.OrderGuid" class="btn btn-sm btn-outline-dark">訂單明細</a>
                </td>
            </tr>
        }

    }
</table>
